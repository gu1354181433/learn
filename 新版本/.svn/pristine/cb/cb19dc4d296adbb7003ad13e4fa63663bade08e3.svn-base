<nz-form-item nzType="flex" nzJustify="center">
  <nz-form-label [nzSpan]="2" nzFor="title"> <span style="color:red;">*</span> 用户名</nz-form-label>
  <nz-form-control [nzSpan]="7">
    <input nz-input [(ngModel)]="userName" name="title" type="text" id="title" [disabled]="hide">
  </nz-form-control>
</nz-form-item>
<nz-form-item nzType="flex" nzJustify="center">
  <nz-form-label [nzSpan]="2" nzFor="title"> <span style="color:red;">*</span> 密码</nz-form-label>
  <nz-form-control [nzSpan]="7">
    <input nz-input [(ngModel)]="password" name="title" type="text" id="title" [disabled]="hide">
  </nz-form-control>
</nz-form-item>
<nz-form-item nzType="flex" nzJustify="center">
  <nz-form-label [nzSpan]="2" nzFor="subject"><span style="color:red;">*</span> 角色</nz-form-label>
  <nz-form-control [nzSpan]="7">
    <nz-select name="subject" style="width: 100%;" [(ngModel)]="roleName" [disabled]="hide">
      <nz-option *ngFor="let s of roleData" [nzValue]="s" [nzLabel]="s"></nz-option>
    </nz-select>
  </nz-form-control>
</nz-form-item>
<nz-form-item nzType="flex" nzJustify="center">
  <nz-form-control [nzSpan]="9" style="text-align: right;">
    <button nz-button nzType="primary" nzSize="large" (click)="save()" *ngIf="!hide" class="save" >保存</button>
    <button nz-button nzType="primary" nzSize="large" (click)="cancel()">返回</button>
  </nz-form-control>
</nz-form-item>
