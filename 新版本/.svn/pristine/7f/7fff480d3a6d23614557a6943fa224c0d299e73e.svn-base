@mixin display {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}
body {
    width: 100%;
}
header.name {
    @include display;
    width: 100%;
    height: 64px;
    background-color: rgba(255, 255, 255, 1);
    font-size: 24px;
    font-weight: 600;
    color: #000;
    border:01px solid  rgba(233, 233, 233, 1);
    .logo {
        @include display;
        justify-content: center;
        width: 32px;
        height: 32px;
        margin: 2px;
        background-color: rgba(0, 0, 0, 0.458823529411765);
        font-size: 8px;
        color: #FFFFFF;
        border-radius: 04px;
    }
}
main.name {
    @include display;
    width: 100%;
    position: absolute;
    top: 64px;
    bottom: 0%;
    background-color: rgba(244, 244, 244, 1);
    input.name {
        width: 100%;
        height: 39px;
        border-color:  #c0c0c0;
        margin: 0 0 20px 20px;
    }
    button.name {
        width: 195px;
        height: 46px;
        margin: 20px 0 0 100px;
    }
}
//账号/密码的大小
:host ::ng-deep.ant-form label {
    font-size: 26px;
    margin-right: 50px;
}
// 输入框的边距
:host ::ng-deep.ant-form-item {
    position: relative;
    left: 320px;
}
//提示文字
:host ::ng-deep.ant-form-explain {
    position: relative;
    left: 90px;
    top: -15px;
    color: red;
}